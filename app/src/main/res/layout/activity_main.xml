<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.example.logonrm.notepad.MainActivity">

    <EditText
        android:id="@+id/etTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título"
        android:background="@drawable/custom_edittext"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etConteudo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Digite aqui o conteúdo da anotação ..."
        android:gravity="top"
        style="@style/meu_edittext"/>
        <!--android:background="@drawable/selector_custom_edittext"/>-->


</LinearLayout>
